{
  "scripts": {
    "build:css": "npm run build:css:tailwind && npm run build:css:sass",
    "build:css:tailwind": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/tailwind.css",
    "build:css:sass": "sass ./app/assets/stylesheets/application.sass.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules"
  },
  "dependencies": {
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.5",
    "sass": "^1.45.0",
    "tailwindcss": "^3.0.7",
    "tailwindcss-dir": "^4.0.0"
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.22.17",
    "node": "^16.14.0"
  },
  "engineStrict": true
}
